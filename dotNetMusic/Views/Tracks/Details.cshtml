@model dotNetMusic.Models.Track

@{
    ViewBag.Title = "Details";
}
<div class="overlay">
    <h2>Details</h2>

    <div>
        <h4>Track</h4>
        <hr />
        <table>
            <tr>
                <td>
                <dl class="dl-horizontal">
                    <dt>
                    Playlist
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Playlist.name)
                    </dd>

                    <dt>
                    Title
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Title)
                    </dd>

                    <dt>
                    Artist
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Artist)
                    </dd>

                    <dt>
                    Date Added
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.AddedDate)
                    </dd>

                    <dt>
                    URL
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.EmbedURL)
                    </dd>

                    <dt>
                    Description
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                </dl>
                </td>
                <td style="padding:30px">&nbsp;</td>
                <td>
                    @{
                        string base64String = Convert.ToBase64String(Model.QRcode);
                    }
                    <img style="width: 40%;" src="@String.Format("data:image/png;base64,{0}", base64String)" />
                </td>
            </tr>
        </table>
        
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.id }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>